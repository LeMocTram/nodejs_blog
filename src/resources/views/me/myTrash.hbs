<div class="mt-4">
    <div>
        <h3>Khóa học đã xóa</h3>
        <a href="/me/stored/courses">Danh sách khóa học</a>
    </div>

    <div class="mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Tên khóa học</th>
                    <th scope="col">Trình độ</th>
                    <th scope="col">Ngày</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}

                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>

                    <td><a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
                        <a class="btn btn-link " data-bs-toggle="modal" data-id="{{this._id}}"
                            data-bs-target="#deleteModal">Xóa vĩnh viễn</a>
                        <!-- Modal -->
                        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Xóa khóa học</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Bạn có chắc muốn xóa khóa học này ?
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btn-delete" type="button" class="btn btn-danger"
                                            data-bs-dismiss="modal">Xóa</button>
                                        <button type="button" class="btn btn-primary">Hủy</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Thùng rác trống.
                        <a href="/me/stored/courses">Danh sách khóa học.</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</div>


{{!-- delete hidden form --}}
<form name="delete-form" method="POST"></form>
<form name="restore-form" method="POST"></form>

<script>

    var deleteForm = document.forms['delete-form']
    var restoreForm = document.forms['restore-form']

    const exampleModal = document.getElementById('deleteModal')
    var restoreBtn = $('.btn-restore');

    var idCourse

    if (exampleModal) {
        exampleModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget
            idCourse = button.getAttribute('data-id')
        })
        var deleteButton = document.getElementById('btn-delete');

        deleteButton.onclick = function () {
            deleteForm.action = '/courses/delete/' + idCourse + '?_method=DELETE';
            deleteForm.submit();
        }

        //restore
        restoreBtn.click(function (event) {
            event.preventDefault();
            var courseId = $(this).data('id')
            restoreForm.action = '/courses/restore/' + courseId + '?_method=PATCH';
            restoreForm.submit();
        })
    }
</script>